<header class="align-center">
	<h2>Breweries</h2>
</header>

<div class="center">
	<!-- brewery list -->
	<table>
		<thead>
			<tr>
				<th>Brewery</th>
				<th>Location</th>
				<!-- <th>Description</th> -->
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
<!--
	<div id="addBrewery" class="3u$ 12u$(small)">
		<button type="button" id="addBrewery" class="small icon fas 	fa-plus">Brewery</button>
	</div> -->
	<%= form_for @brewery do |f| %>

		<div class="box" id="error_explanation">
		</div>

		<div class="row uniform">
			<div class="6u 12u$(xsmall)">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>

			<div class="6u 12u$(xsmall)">
				<%= f.label :location %>
				<%= f.text_field :location %>
			</div>

			<div class="12u$">
				<%= f.label :description %>
				<%= f.text_area :description %>
			</div>

			<div class="6u 12u$(xsmall)">
				<%= f.submit "Add Brewery" %>
			</div>
		</div>
	<% end %>
</div>
