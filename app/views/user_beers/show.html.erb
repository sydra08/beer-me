<header class="align-center">
	<h2><%= @userbeer.beer.name %></h2>
	<!-- need to update button styling -->
	<%= render partial: "application/beer_buttons", locals: {user: current_user, beer: @userbeer} %>
</header>

<div class="row 200%">
	<div class="6u 12u$(medium)">
		<ul class="alt">
			<li><strong>Brewery: </strong><%= link_to @userbeer.brewery_name, brewery_path(@userbeer.beer.brewery) %></li>
			<li><strong>Style: </strong><%= link_to @userbeer.category_name, category_path(@userbeer.beer.category) %></li>
			<li><strong>ABV: </strong><%= @userbeer.beer.abv%>% </li>
			<li><strong>Description: </strong><%= @userbeer.beer.description %></li>
		</ul>
	</div>

	<div class="6u 12u$(medium)">
		<strong>My notes:</strong>
		<% if @userbeer.notes %>
		  <p><%= @userbeer.notes%></p>
		<% else %>
			<%= form_for ([current_user, @userbeer]) do |f| %>
				<%= f.text_area :notes, size: "45x3"%> <br>
				<%= f.submit "Add Note" %>
			<% end %>
		<% end %>
	</div>
</div>


