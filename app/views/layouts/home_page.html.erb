<!DOCTYPE html>
<html>
	<head>
		<title>BeerMe</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

    <%= csrf_meta_tags %>

		<%= stylesheet_link_tag 'application', media: 'all'%>
		<%= javascript_include_tag 'application' %>

	</head>
	<body>

		<!-- Header -->
		<header id="header">
			<div class="inner">
				<nav id="nav">
           <%= render partial: 'layouts/home_navbar' %>
				</nav>
				<a href="#navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
			</div>
		</header>

		<%= yield %>

		<!-- Footer -->
			<footer id="footer">
				<div class="inner">
					<div class="copyright">
  					&copy; BeerMe. Design: <a href="https://templated.co">TEMPLATED</a>. Images: <a href="https://www.pexels.com/">Pexels</a>.
				  </div>
				</div>
			</footer>

	</body>
</html>
