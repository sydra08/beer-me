<%= form_for(beer) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br> </br>

  <%= f.label :brewery %>
  <%= f.collection_select :brewery, Brewery.all, :id, :name %> <br> </br>

  <%= f.label :category %>
  <%= f.collection_select :category, Category.all, :id, :name %> <br> </br>

  <%= f.label :description %>
  <%= f.text_area :description %> <br> </br>

  <%= f.label :abv %>
  <%= f.text_field :abv %> <br> </br>

  <%= f.submit "Add Beer" %>
<% end %>
