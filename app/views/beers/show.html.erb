<h1><%= @beer.name %></h1>
<h3>Brewery: <%= link_to @beer.brewery.name, brewery_path(@beer.brewery) %></h3>
<h3>Style: <%= link_to @beer.category.name, category_path(@beer.category) %></h3>
<h3>ABV: <%= @beer.abv%> </h3>
<h3>Description: </h3>
<p><%= @beer.description %></p>

<% if @status %>
  <h4>Info</h4>
  <p>Status: <%= @status %></p>
  <p>Notes: <%= @notes %></p>
<% end %>
