<header class="align-center">
	<h2>Beers</h2>
</header>

<div class="row 200%">
	<div class="6u 12u$(medium) row uniform">
			<%= form_tag(beers_path, method: "get") do %>
				<%= render partial: 'application/category_filter', locals: {categories: @categories} %>
				<%= render partial: 'application/brewery_filter', locals: {breweries: @breweries} %>
				<div>
					<%= submit_tag "Apply Filter" %>
				</div>
			<% end %>
	</div>

	<div class="6u 12u$(medium)">
		<div class="table-wrapper">
	    <table>
	      <thead>
	        <tr>
	          <th>Brewery</th>
	          <th>Name</th>
	          <th>Abv</th>
	        </tr>
	      </thead>
	      <tbody>
	      </tbody>
	    </table>
	  </div>
	</div>
	<!-- <div class="6u$ 12u$(medium)">
		<%= render partial: 'application/beer_table', locals: {beers: @beers} %>
	</div> -->
</div>
