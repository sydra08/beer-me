<header class="align-center">
	<h2>Beers</h2>
</header>

<div class="row 200%">
	<div class="6u 12u$(medium)">
	<h4>Filter Beer List:</h4>
		<div class="row uniform">
		  <%= form_tag(beers_path, method: "get") do %>
		    <div class="select-wrapper 12u$">
		      <%= select_tag "category", options_from_collection_for_select(@categories, "id", "name"), prompt: "All Categories" %> <br>
		    </div>
		    <div class="select-wrapper 12u$">
		      <%= select_tag "brewery", options_from_collection_for_select(@breweries, "id", "name"), prompt: "All Breweries" %> <br>
		    </div>
		    <div>
					<%= submit_tag "Apply Filter" %>
				</div>
		  <% end %>
		</div>
	</div>

	<div class="6u$ 12u$(medium)">
	  <!-- need to work it out so that this page can be used as user landing and beer index...partial? -->
	  <% if @beers && !@beers.empty? %>
			<div class="table-wrapper">
				<table>
					<thead>
						<tr>
							<th>Brewery</th>
							<th>Name</th>
							<th>Abv</th>
						</tr>
					</thead>
					<tbody>
					<% @beers.each do |beer| %>
						<tr>
							<td><%= link_to beer.brewery.name, brewery_path(beer.brewery) %></td>
							<td><%= link_to beer.name, beer_path(beer) %></td>
							<td><%= beer.abv %>%</td>
						</tr>
					<% end %>
				</table>
			</div>
	  <% else %>
	    <p><em>No results</em></p>
	  <% end %>
	</div>
</div>
