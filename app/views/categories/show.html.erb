<header class="align-center">
	<h2><%= @category.name %></h2>
</header>

<% if @category.description %>
  <div class="box">
    <p><%= @category.description %></p>
  </div>
<% end %>

<h3>Beers</h3>

<div class="row 200%">
	<div class="row uniform 6u 12u$(medium)">
		<div class="select-wrapper 12u$">
			<%= form_tag("/categories/#{@category.id}", method: "get") do %>
	      <%= select_tag "brewery", options_from_collection_for_select(@breweries, "id", "name"), prompt: "All Breweries" %>
	    </div>
			<div>
				<%= submit_tag "Apply Filter" %>
			</div>
	  <% end %>
	</div>

	<div class="6u$ 12u$(medium)">
		<% if !@beers.empty? %>
			<div class="table-wrapper">
				<table>
					<thead>
						<tr>
							<th>Brewery</th>
							<th>Name</th>
							<th>Abv</th>
						</tr>
					</thead>
					<tbody>
					<% @beers.alpha_sorted.each do |beer| %>
						<tr>
							<td><%= link_to beer.brewery.name, brewery_path(beer.brewery) %></td>
							<td><%= link_to beer.name, beer_path(beer) %></td>
							<td><%= beer.abv %>%</td>
						</tr>
					<% end %>
				</table>
			</div>
			<% else %>
				<div class="table-wrapper">
					<table>
						<thead>
							<tr>
								<th>Brewery</th>
								<th>Name</th>
								<th>Abv</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><em>No results</em></td>
								<td></td>
								<td></td>
							</tr>
					</table>
				</div>
			<% end %>
	</div>
</div>
