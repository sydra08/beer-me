<header class="align-center">
	<h2><%= @category.name %></h2>
</header>

<% if @category.description %>
  <div class="box">
    <p><%= @category.description %></p>
  </div>
<% end %>

<h3>Beers</h3>

<div class="row 200%">
	<div class="6u 12u$(medium)">
		<%= form_tag("/categories/#{@category.id}", method: "get", id:
	"breweryFilter") do %>
			<%= render partial: 'application/brewery_filter', locals: {breweries: @breweries} %>
	  <% end %>
	</div>

	<div class="6u$ 12u$(medium)">
		<%= render partial: 'application/beer_table', locals: {beers: @beers} %>
	</div>
</div>
