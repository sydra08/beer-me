<header class="align-center">
	<h2><%= @category.name %></h2>
</header>

<% if @category.description %>
  <div class="box">
    <p><%= @category.description %></p>
  </div>
<% end %>

<h3>Beers</h3>

<div class="filter">
  <h5>Filter By Brewery</h5>
  <div class="select-wrapper 6u$ 12u$(medium)">
    <%= form_tag("/categories/#{@category.id}", method: "get") do %>
      <%= select_tag "brewery", options_from_collection_for_select(@breweries, "id", "name"), prompt: "All" %> <br>
      <%= submit_tag "Apply Filter" %>
    <% end %>
  </div>
</div>

<div class="list">
  <% if @beers.empty? %>
    <p><em>No results</em></p>
  <% else %>
    <ul>
      <% @beers.each do |beer| %>
        <li><%= link_to beer.brewery.name, brewery_path(beer.brewery) %>: <%= link_to beer.name, beer_path(beer) %> (abv: <%= beer.abv %>%)</li>
      <% end %>
    </ul>
  <% end %>
</div>
