<% if !beers.empty? %>
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Brewery</th>
          <th>Name</th>
          <th>Abv</th>
        </tr>
      </thead>
      <tbody>
      <% beers.sort_by_brewery.each do |beer| %>
        <tr>
          <td><%= link_to beer.brewery.name, brewery_path(beer.brewery) %></td>
          <td><%= link_to beer.name, beer_path(beer) %></td>
          <td><%= beer.abv %>%</td>
        </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Brewery</th>
          <th>Name</th>
          <th>Abv</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><em>No results</em></td>
          <td></td>
          <td></td>
        </tr>
    </table>
  </div>
<% end %>
