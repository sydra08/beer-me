<!-- button to indicate that you've tried a beer -->
<!-- this only takes care of when it is on the user beer page -->

<% if beer.verbose_status == "Want to try" %>
  <%= form_for ([user, beer]) do |f| %>
    <%= f.radio_button :status, true %>
    <%= f.label :status, "Tried", :value => true %>

    <%= f.radio_button :status, false, :checked => 'checked' %>
    <%= f.label :status, "Want to try", :value => false %> <br>

    <%= f.submit 'update' %>
  <% end %>
<% else %>
  <%= form_for ([user, beer]) do |f| %>
    <%= f.radio_button :status, true, :checked => 'checked' %>
    <%= f.label :status, "Tried", :value => true %>

    <%= f.radio_button :status, false %>
    <%= f.label :status, "Want to try", :value => false %> <br>

    <%= f.submit 'update' %>
  <% end %>
<% end %>
